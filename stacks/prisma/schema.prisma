// ./prisma/schema.prisma
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    email    String @unique
    password String
}

model GameType {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String
}

model Table {
    id           String         @id @default(auto()) @map("_id") @db.ObjectId
    gameType     String
    seats        Int
    tableNumber  Int
    TablePlayers TablePlayers[]
}

model Player {
    id                String              @id @default(auto()) @map("_id") @db.ObjectId
    firstName         String
    lastName          String
    initials          String
    phoneNumber       String
    gameType          String
    WaitingListPerson WaitingListPerson[]
    TablePlayers      TablePlayers[]
}

model WaitingList {
    id                String              @id @default(auto()) @map("_id") @db.ObjectId
    gameType          String
    open              Boolean
    WaitingListPerson WaitingListPerson[]
}

model WaitingListPerson {
    id            String      @id @default(auto()) @map("_id") @db.ObjectId
    waitingList   WaitingList @relation(fields: [waitingListId], references: [id])
    player        Player      @relation(fields: [playerId], references: [id])
    waitingListId String      @db.ObjectId
    playerId      String      @db.ObjectId
}

model TablePlayers {
    id         String @id @default(auto()) @map("_id") @db.ObjectId
    table      Table  @relation(fields: [tableId], references: [id])
    tableId    String @db.ObjectId
    player     Player @relation(fields: [playerId], references: [id])
    playerId   String @db.ObjectId
    seatNumber Int
}

model TournamentAttributes {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String
}

model Tournament {
    id                    String             @id @default(auto()) @map("_id") @db.ObjectId
    name                  String
    date                  DateTime
    gameType              String
    buyin                 Int
    registeredPlayers     Int
    status                String
    attributes            String[]
    description           String
    minimumPlayers        Int
    maximumPlayers        Int
    remainingPlayers      Int
    startingChips         Int
    blindIncreaseMinutes  Int
    lateRegistrationLevel Int
    rebuyNumber           Int
    rebuyCost             Int
    rebuyChips            Int
    maximumRebuyChips     Int
    rebuyTimeMinutes      Int
    addOnsNumber          Int
    addOnsCost            Int
    addOnsChips           Int
    dealMaking            Boolean
    TournamentPlayer      TournamentPlayer[]
}

model TournamentStatus {
    id     String @id @default(auto()) @map("_id") @db.ObjectId
    status String
}

model TournamentGameType {
    id   String @id @default(auto()) @map("_id") @db.ObjectId
    name String
}

model TournamentPlayer {
    id           String     @id @default(auto()) @map("_id") @db.ObjectId
    tournament   Tournament @relation(fields: [tournamentId], references: [id])
    tournamentId String     @db.ObjectId
    firstName    String
    lastName     String
    phoneNumber  String
}
